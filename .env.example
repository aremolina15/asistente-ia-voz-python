# Variables de entorno para DevOps Voice Assistant

# GCP Configuration
# IMPORTANTE: Reemplaza con tu propio proyecto GCP
GOOGLE_CLOUD_PROJECT=tu-proyecto-gcp
GCP_REGION=us-central1

# Application Settings
DEBUG=False
LOG_LEVEL=INFO
# IMPORTANTE: Cambia este valor en producción con una clave segura
SECRET_KEY=tu-clave-secreta-aqui-cambia-en-produccion

# CORS Settings
# En producción, especifica los orígenes permitidos separados por comas
# Ejemplo: ALLOWED_ORIGINS=https://tudominio.com,https://app.tudominio.com
ALLOWED_ORIGINS=*

# API Configuration
API_TITLE=DevOps Voice Assistant API
API_VERSION=v1

# Storage Configuration
STORAGE_BUCKET=devops-assistant-storage

# VertexAI Configuration
VERTEX_AI_MODEL=gemini-2.0-flash
VERTEX_AI_TEMPERATURE=0.7
VERTEX_AI_MAX_TOKENS=1024

# Database (opcional)
DATABASE_URL=

# Redis (opcional)
REDIS_URL=

# Voice Settings
SPEECH_TO_TEXT_ENABLED=true
TEXT_TO_SPEECH_ENABLED=true
